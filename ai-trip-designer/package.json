{
  "name": "ai-trip-designer",
  "version": "0.1.0",
  "description": "AI Trip Designer MCP server exposing travel planning tools for ChatGPT Apps.",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "start": "node dist/server.js",
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc --noEmit",
    "tunnel": "ngrok http 3333"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.1.4",
    "dotenv": "^16.4.5",
    "express": "^4.19.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.12",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18"
  }
}
